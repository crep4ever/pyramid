  INLINE
  CDart* CTile::insertVertexOnEdge( CDart* ADart )
  {
    CDoublet t2 = getDoublet(ADart).getNextPointel();
    CDoublet t1 = getOtherLinel(t2);
    return insertVertexOnEdge(ADart, t1, t2);
