bool CImageTiff::isPixelInImage(uint Ax, uint Ay, uint ADepth)
{
  return Ax<width(ADepth) && Ay<height(ADepth);
}

INLINE
bool CImageTiff::isPixelInImage(const IM_Pixel & APixel, uint ADepth)
{
