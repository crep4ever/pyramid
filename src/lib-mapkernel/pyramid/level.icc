  //------------------------------------------------------------------------------
  INLINE
  CTile* CLevel::loadTile(const CPoint2D & APos)
  {
    //std::cout<<" CLevel::loadTile ("<<APos.getX()<<","<<APos.getY()<<","<<depth()<<")"<<std::endl;
    //std::cout<<" w = "<<FTileWidth<<" h = "<<FTileHeight<<std::endl;
    assert(FTileWidth!=0 && FTileHeight!=0);
    CTile* newTile = new CTile(FTileWidth, FTileHeight);
 
    newTile->setMergeThreshold(FMergeThreshold);
    newTile->setImage(FImage);
    newTile->setPixelMark();
    newTile->load(APos.getX(), APos.getY(), depth());
    addTile(newTile);

    //todo: tester s'il y une tuile gauche ou haut et faire les coutures par beta2'
    return newTile;
  }
  //------------------------------------------------------------------------------
  INLINE
  bool CLevel::unloadTile(uint i, uint j)
  {
    return unloadTile(CPoint2D(i,j));
  }

  //------------------------------------------------------------------------------
  INLINE
  bool CLevel::unloadTile(const CPoint2D & APos)
  {
    // On cherche la tuile dans le vecteur et on la supprime
    for(it = FTiles.begin(); it!=FTiles.end();++it)
      if(tileIndexI(*it) == APos.getX() && tileIndexJ(*it) == APos.getY())
	{
	  CTile* tmp = *it;
	  it = FTiles.erase(it);
	  delTile(tmp);
	  return true;
	}
    assert(!isTileLoaded(APos));
    return false;
  }
  //------------------------------------------------------------------------------
  INLINE
  bool CLevel::isTileLoaded(const CPoint2D & APos)
  {
    for(it = FTiles.begin(); it!=FTiles.end(); ++it)
      if(tileIndexI(*it) == APos.getX() && tileIndexJ(*it) == APos.getY())
	return true;
  
    return false;    
  }
  //------------------------------------------------------------------------------
  INLINE
  void CLevel::unloadAllTiles()
  {
    //std::cout<<"[start] CLevel::unloadAllTiles lvl "<<FDepth<<std::endl;
    for(uint i=0; i<FTiles.size(); ++i)
      delTile(FTiles[i]);
      
    FTiles.clear();
    assert(FTiles.empty());
    //std::cout<<"[end] CLevel::unloadAllTiles"<<std::endl;
  }
  //------------------------------------------------------------------------------
  INLINE
  void CLevel::loadAllTiles()
  {
    for(uint j=0; j<nbTilesHeight(); ++j)
      for(uint i=0; i<nbTilesWidth(); ++i)
	tile(CPoint2D(i,j));
  }
  //------------------------------------------------------------------------------
  INLINE
  void CLevel::unload()
  {
    unloadAllTiles();
    image()->close();
    image()->unload();
    image()->open();
    if(FClassif) delete FClassif; FClassif=NULL;
    if(FAssignment) delete FAssignment; FAssignment=NULL;
    FHisto=NULL;
  }   

