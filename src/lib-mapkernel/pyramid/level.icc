  //------------------------------------------------------------------------------
  INLINE
  CPoint2D CLevel::upRatios() const
  {
    if(FDepth==0) return CPoint2D(1,1);
    return CPoint2D( imageWidth()/image()->getXSize(FDepth-1),
		     imageHeight()/image()->getYSize(FDepth-1) );
  }
  //------------------------------------------------------------------------------
  INLINE
  CPoint2D CLevel::downRatios() const
  {
    return CPoint2D( image()->getXSize(FDepth+1)/imageWidth(),
		     image()->getYSize(FDepth+1)/imageHeight() );
  }

